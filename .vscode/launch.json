{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "cwd": "${workspaceRoot}/",
            "executable": "target/thumbv6m-none-eabi/debug/odango-ocds-raspberrypi-pico",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath": "/home/pi/opt/gcc-arm-none-eabi-10.3-2021.10/bin/arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/raspberrypi-swd.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "/home/pi/opt/raspberrypi/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            // Work around for stopping at main on restart
        }
    ]
}